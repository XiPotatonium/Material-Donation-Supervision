<Page x:Class="MDS.Client.NavigationPages.ManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDS.Client.NavigationPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagePage">

    <Grid>
        <TabControl x:Name="MainTabControl" BorderThickness="0"
                    Style="{StaticResource MaterialDesignAppBarTabControl}">
            <TabItem Header="物资审核" x:Name="MaterialAuditPageTab">
                <Frame x:Name="MaterialAuditPageFrame" Margin="0,0"/>
            </TabItem>
            <TabItem Header="身份认证" x:Name="AutherRequestPageTab">
                <Frame x:Name="AutherRequestPageFrame" Margin="0,0"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>

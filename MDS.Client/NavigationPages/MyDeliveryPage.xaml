<Page x:Class="MDS.Client.NavigationPages.MyDeliveryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDS.Client.NavigationPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyDeliveryPage">

    <Grid>
        <TabControl x:Name="MainTabControl" BorderThickness="0"
                    Style="{StaticResource MaterialDesignTabControl}">
            <TabItem Header="信息总览" x:Name="OverviewPageTab">
                <Frame x:Name="OverviewPageFrame" Margin="5,0"/>
            </TabItem>
            <TabItem Header="配送中" x:Name="ProcessingPageTab">
                <Frame x:Name="ProcessingPageFrame" Margin="5,0"/>
            </TabItem>
            <TabItem Header="待接单" x:Name="WaitingPageTab">
                <Frame x:Name="WaitingPageFrame" Margin="5,0"/>
            </TabItem>
            <TabItem Header="已完成" x:Name="HistoryPageTab">
                <Frame x:Name="HistoryPageFrame" Margin="5,0"/>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
